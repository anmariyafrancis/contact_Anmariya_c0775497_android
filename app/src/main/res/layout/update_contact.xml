<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6600BCD4"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Update Contact"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/update_Fname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter  First Name:"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/update_Lname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Last Name:"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/update_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="0123456789"
        android:hint="Enter Phone Number"
        android:inputType="number" />

    <EditText
        android:id="@+id/update_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Email ID"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/update_Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Address Name:"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btn_update_emp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4CAF50"
        android:text="DONE"
        android:textColor="#0E0D0D"
        android:textStyle="bold" />


</LinearLayout>